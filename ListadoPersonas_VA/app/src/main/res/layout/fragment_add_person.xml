<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFF">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rounded_rectangle_shape"
        android:layout_margin="20dp"
        >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            >

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="@string/person_first_name_form"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="17sp"
                    android:padding="1dp"
                    android:gravity="start"
                    android:layout_marginTop="30dp"
                    android:fontFamily="sans-serif"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/rounded_rectangle_shape"
                    android:minWidth="100sp"
                    ></TextView>

                <EditText
                    android:id="@+id/EditFirstNameCreate"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="17sp"
                    android:padding="1dp"
                    android:gravity="start"
                    android:layout_marginTop="30dp"
                    android:fontFamily="sans-serif"
                    android:layout_marginEnd="35dp"
                    android:background="#F7FCFF"
                    android:minWidth="100sp"></EditText>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="@string/person_last_name_form"
                    android:id="@+id/txtViewLastNameCreate"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="17sp"
                    android:gravity="start"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/rounded_rectangle_shape"
                    android:minWidth="100sp"
                    ></TextView>

                <EditText
                    android:id="@+id/EditLastNameCreate"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="17sp"
                    android:gravity="start"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="35dp"
                    android:background="#F7FCFF"
                    android:minWidth="100sp"></EditText>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="@string/person_phone_form"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="17sp"
                    android:gravity="start"
                    android:background="@drawable/rounded_rectangle_shape"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="10dp"
                    android:minWidth="100sp"
                    ></TextView>

                <EditText
                    android:id="@+id/EditTelefonoCreate"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="17sp"
                    android:gravity="start"
                    android:background="#F7FCFF"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="35dp"
                    android:inputType="phone"
                    android:minWidth="100sp"></EditText>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30sp"
                android:layout_marginTop="10sp"
                android:textSize="17sp"
                android:text="@string/date_of_birth"></TextView>

            <DatePicker
                android:id="@+id/calendario"
                android:layout_width="match_parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_height="wrap_content"
                android:calendarViewShown="false"
                android:datePickerMode="spinner"
                android:minDate="@string/minDate"
                android:maxDate=""
                ></DatePicker>

            <Button
                android:id="@+id/btnSavePersonCreate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/save_person">
            </Button>

        </LinearLayout>

        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>