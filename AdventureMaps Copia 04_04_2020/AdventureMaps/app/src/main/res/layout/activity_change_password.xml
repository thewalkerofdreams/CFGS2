<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="0sp"
        android:layout_weight="20"
        android:layout_marginTop="20sp"
        android:layout_marginBottom="10sp"
        android:layout_marginStart="30sp"
        android:layout_marginEnd="30sp"></ImageView>

    <EditText
        android:id="@+id/EditTextEmailActivityChangePassword"
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="15"
        android:layout_marginTop="10sp"
        android:layout_marginStart="30sp"
        android:layout_marginEnd="30sp"
        android:hint="@string/hint_email"></EditText>

    <EditText
        android:id="@+id/EditTextOldPasswordActivityChangePassword"
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="15"
        android:layout_marginTop="10sp"
        android:layout_marginStart="30sp"
        android:layout_marginEnd="30sp"
        android:hint="@string/hint_old_password"></EditText>

    <EditText
        android:id="@+id/EditTextNewPasswor01dActivityChangePassword"
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="15"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="10sp"
        android:layout_marginStart="30sp"
        android:layout_marginEnd="30sp"
        android:hint="@string/hint_new_password"></EditText>

    <EditText
        android:id="@+id/EditTextNewPasswor02dActivityChangePassword"
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="15"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="10sp"
        android:layout_marginStart="30sp"
        android:layout_marginEnd="30sp"
        android:hint="@string/hint_repeat_the_password"></EditText>

    <Button
        android:id="@+id/btnChangePasswordActivityChangePassword"
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="20"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="30sp"
        android:layout_marginStart="30sp"
        android:layout_marginEnd="30sp"
        android:text="@string/change_password"
        android:onClick="tryChangePassword"></Button>

</LinearLayout>