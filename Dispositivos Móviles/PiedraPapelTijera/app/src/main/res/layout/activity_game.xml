<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/btnScissors"
        android:layout_width="90sp"
        android:layout_height="90sp"
        android:layout_marginTop="265dp"
        android:layout_marginEnd="40dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:onClick="playGame"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/scissor" />

    <ImageButton
        android:id="@+id/btnPaper"
        android:layout_width="90sp"
        android:layout_height="90sp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="20dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:onClick="playGame"
        app:layout_constraintEnd_toStartOf="@+id/btnScissors"
        app:layout_constraintStart_toEndOf="@+id/btnStone"
        app:layout_constraintTop_toBottomOf="@+id/imageView01"
        app:srcCompat="@drawable/plane" />

    <ImageView
        android:id="@+id/imageView01"
        android:layout_width="113dp"
        android:layout_height="105dp"
        android:layout_marginStart="149dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="149dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/help" />

    <ImageButton
        android:id="@+id/btnStone"
        android:layout_width="90sp"
        android:layout_height="90sp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="265dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:onClick="playGame"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/stone" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="333dp"
        android:layout_height="25dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="40dp"
        android:text="Choose a tool to play!"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnScissors" />
</androidx.constraintlayout.widget.ConstraintLayout>