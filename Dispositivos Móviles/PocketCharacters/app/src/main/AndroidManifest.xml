<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="es.iesnervion.yeray.pocketcharacters">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Activities.StatListActivity"
            android:label="@string/title_activity_stat_list"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".Activities.ObjectTypeListActivity"
            android:label="@string/title_activity_object_type_list"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activities.ObjectListSimpleActivity"
            android:label="@string/title_activity_object_list"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activities.GameModeListActivity"
            android:label="@string/title_activity_game_mode_list"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activities.CharacterListActivity"
            android:label="@string/title_activity_character_list"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".Activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activities.GameModeDatasActivity" />
        <activity android:name=".Activities.NewObjectActivity" />
        <activity android:name=".Activities.EditObjectActivity" />
    </application>

</manifest>