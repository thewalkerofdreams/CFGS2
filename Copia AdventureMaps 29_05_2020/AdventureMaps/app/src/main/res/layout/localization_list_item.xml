<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:descendantFocusability="blocksDescendants">

    <TextView
        android:id="@+id/LocalizationName"
        android:layout_height="match_parent"
        android:layout_width="0sp"
        android:layout_weight="25"
        android:textSize="16sp"
        android:gravity="center"></TextView>

    <TextView
        android:id="@+id/LocalizationDateOfCreation"
        android:layout_height="match_parent"
        android:layout_width="0sp"
        android:layout_weight="25"
        android:textSize="16sp"
        android:gravity="center"></TextView>

    <LinearLayout
        android:layout_width="0sp"
        android:layout_height="match_parent"
        android:layout_weight="25"
        android:layout_marginTop="4sp"
        android:layout_marginBottom="4sp"
        android:gravity="center">

        <ImageButton
            android:id="@+id/ImageButtonNavigateLocalization"
            android:layout_width="60sp"
            android:layout_height="60sp"
            android:background="@drawable/navigate"
            android:onClick="navigateToLocalization"></ImageButton>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0sp"
        android:layout_height="match_parent"
        android:layout_weight="25"
        android:layout_marginTop="4sp"
        android:layout_marginBottom="4sp"
        android:gravity="center">

        <ImageButton
            android:id="@+id/ImageButtonLocalizationFav"
            android:layout_width="60sp"
            android:layout_height="60sp"
            android:onClick="onClickLocalizationFav"></ImageButton>

    </LinearLayout>

</LinearLayout>