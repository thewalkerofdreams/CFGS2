<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_margin="10sp"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/EditPlayerFistNameAddFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></EditText>

    <EditText
        android:id="@+id/EditPlayerLastNameAddFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></EditText>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <CheckBox
            android:id="@+id/checkboxPortero"
            android:layout_width="0sp"
            android:layout_weight="25"
            android:layout_height="match_parent"
            android:text="Portero"/>

        <CheckBox
            android:id="@+id/checkboxDefensa"
            android:layout_width="0sp"
            android:layout_weight="25"
            android:layout_height="match_parent"
            android:text="Defensa"/>

        <CheckBox
            android:id="@+id/checkboxCentrocampista"
            android:layout_width="0sp"
            android:layout_weight="25"
            android:layout_height="match_parent"
            android:text="Centrocampista"/>

        <CheckBox
            android:id="@+id/checkboxDelantero"
            android:layout_width="0sp"
            android:layout_weight="25"
            android:layout_height="match_parent"
            android:text="Delantero"/>

    </LinearLayout>

    <Button
        android:id="@+id/btnInsertPlayerFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Insert Player"></Button>

</LinearLayout>