<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <GridView
        android:id="@+id/GridViewGalleryImageActivity"
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="80"
        android:numColumns="3"
        android:layout_marginStart="5sp"
        android:layout_marginEnd="5sp"
        android:gravity="center"
        android:stretchMode="columnWidth"></GridView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="20"
        android:orientation="horizontal"
        android:background="@color/colorTabList">

        <LinearLayout
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="50"
            android:orientation="vertical"
            android:gravity="center">

            <Button
                android:id="@+id/btnDeleteImagesActivityImageGallery"
                android:layout_width="60sp"
                android:layout_height="60sp"
                android:layout_gravity="center"
                android:background="@drawable/trash"></Button>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="50"
            android:orientation="vertical"
            android:gravity="center">

            <Button
                android:id="@+id/btnAddImagesActivityImageGallery"
                android:layout_width="60sp"
                android:layout_height="60sp"
                android:layout_gravity="center"
                android:background="@drawable/add_image"></Button>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>