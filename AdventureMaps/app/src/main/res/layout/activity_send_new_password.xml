<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ImageViewSendNewPasswordActivity"
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="20"
        android:layout_marginTop="20sp"
        android:layout_marginBottom="5sp"
        android:layout_marginStart="20sp"
        android:layout_marginEnd="20sp"
        android:gravity="center"
        >

        <ImageView
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:background="@drawable/logo_adventure_maps"></ImageView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="80"
        android:layout_marginStart="40sp"
        android:layout_marginEnd="40sp"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="10sp"
        android:orientation="vertical">

            <EditText
                android:id="@+id/EditTextEmailActivitySendNewPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:hint="@string/hint_email"></EditText>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/send_new_password"
                android:layout_marginTop="10sp"
                android:background="@drawable/background_login_buttons"
                android:onClick="trySendNewPassword"></Button>

    </LinearLayout>

</LinearLayout>